# LucianMirror Environment Configuration

# ===== Server Ports (auto-detected if not specified) =====
# These will automatically find free ports if the defaults are in use
BACKEND_PORT=8000       # FastAPI backend (will auto-find 8000-9000)
FRONTEND_PORT=5173      # Vite frontend (will auto-find 5173-5273)

# ===== API Keys =====
# DALL-E Generation
OPENAI_API_KEY=your_openai_api_key_here

# Stable Diffusion
STABILITY_API_KEY=your_stability_api_key_here

# Replicate (for Mochi/HunyuanVideo)
REPLICATE_API_TOKEN=your_replicate_token_here

# ===== Storage Configuration =====
# Storage type: 'local' or 'r2'
STORAGE_TYPE=local

# Local storage path (if STORAGE_TYPE=local)
LOCAL_STORAGE_PATH=./storage

# Cloudflare R2 (if STORAGE_TYPE=r2)
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=lucianmirror-sprites
R2_PUBLIC_URL=https://your-bucket.r2.dev

# ===== Database Configuration =====
# For persistent storage of sprite metadata
DATABASE_URL=sqlite:///./lucianmirror.db

# ===== Redis Configuration (optional) =====
# For background job processing
REDIS_URL=redis://localhost:6379

# ===== Generation Settings =====
# Default generation API: 'dalle', 'stable_diffusion', 'local_sd', 'replicate'
DEFAULT_GENERATION_API=dalle

# Default art style
DEFAULT_ART_STYLE=watercolor

# ===== Feature Flags =====
ENABLE_VIDEO_GENERATION=false
ENABLE_CUSTOM_LORA=false
ENABLE_BACKGROUND_REMOVAL=true

# ===== Development Settings =====
DEBUG=true
LOG_LEVEL=INFO

# ===== CORS Settings =====
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# ===== Performance Settings =====
MAX_CONCURRENT_GENERATIONS=3
SPRITE_CACHE_SIZE_MB=500
IMAGE_COMPRESSION_QUALITY=85